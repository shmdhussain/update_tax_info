{
	"private": true,
	"scripts": {
		"dev": "next dev",
		"build": "next build",
		"start": "next start",
		"test": "jest --watch",
		"test:ci": "jest --ci",
		"configure-husky": "npx husky install && npx husky add .husky/pre-commit \"npx --no-install lint-staged\""
	},
	"husky": {
		"hooks": {
			"pre-commit": "lint-staged"
		}
	},
	"lint-staged": {
		"**/*.{js}": [
			"prettier --write"
		],
		"**/*.{json}": [
			"prettier --write"
		],
		"**/*.{css,scss}": [
			"prettier --write"
		]
	},
	"dependencies": {
		"next": "latest",
		"react": "^18.1.0",
		"react-dom": "^18.1.0"
	},
	"devDependencies": {
		"@svgr/webpack": "^6.4.0",
		"@testing-library/jest-dom": "5.16.4",
		"@testing-library/react": "13.2.0",
		"@testing-library/user-event": "14.2.0",
		"husky": "^8.0.1",
		"jest": "28.1.0",
		"jest-environment-jsdom": "28.1.0",
		"lint-staged": "^13.0.3",
		"sass": "^1.55.0"
	}
}
